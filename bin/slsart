#!/usr/bin/env node

'use strict';

const packageJson = require('../package.json');
const program = require('commander');
const slsArt = require('../lib/slsart-impl');

program
    .version(packageJson.version)
    .usage('<action>')
    .description('Load test using Serverless and Artillery')
    .option('-s, --script <testScript>', 'Path to Artillery test script (required for "run" action)')
    .action((action, options) => {
        slsArt[action](options);
    })
    .parse(process.argv);
