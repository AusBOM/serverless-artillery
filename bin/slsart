#!/usr/bin/env node

'use strict';

let command   = process.argv[1];

try {
    switch(command.toLowerCase()) {
        case 'deploy':
            // Deploy the Testing Lambda to AWS.
            break;
        case 'run':
            // Invoke the Testing Lambda using provided event.json.
            break;
        case 'cleanup':
            // Delete the Testing Lambda from AWS.
            break;
        default:
            throw new Error(`Unrecognized command: ${command}`);
    }
} catch(ex) {
    console.error(`Error invoking ${process.argv[0]}.`);
    console.error(`${ex.message}`);
}
