#!/usr/bin/env node

'use strict';

let program = require('commander');
let packageJson = require('../package.json');

program
    .version(packageJson.version) // TODO: read this from package.json?
    .command('deploy', 'deploy the testing Lambda to AWS')
    .command('run [test]', 'run the testing Lambda with an optional Test Script')
    .command('cleanup', 'delete the testing Lambda from AWS')
    .parse(process.argv);
